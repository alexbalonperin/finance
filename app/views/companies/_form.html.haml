= form_for(@company) do |f|
  - if @company.errors.any?
    #error_explanation
      %h2
        = pluralize(@company.errors.count, "error")
        prohibited this company from being saved:
      %ul
        - @company.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :sector_id
    %br/
    = f.text_field :sector_id
  .field
    = f.label :symbol
    %br/
    = f.text_field :symbol
  .actions
    = f.submit
